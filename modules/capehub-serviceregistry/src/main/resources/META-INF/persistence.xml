<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="com.capestartproject.serviceregistry" transaction-type="RESOURCE_LOCAL">
    <class>com.capestartproject.serviceregistry.impl.HostRegistrationJpaImpl</class>
    <class>com.capestartproject.serviceregistry.impl.JobJpaImpl</class>
    <class>com.capestartproject.serviceregistry.impl.IncidentDto</class>
    <class>com.capestartproject.serviceregistry.impl.ServiceRegistrationJpaImpl</class>
    <class>com.capestartproject.serviceregistry.impl.IncidentTextDto</class>
    <properties>
      <property name="eclipselink.create-ddl-jdbc-file-name" value="create-capehub-serviceregistry.jdbc" />
      <property name="eclipselink.drop-ddl-jdbc-file-name" value="drop-capehub-serviceregistry.jdbc" />
    </properties>
  </persistence-unit>
</persistence>
